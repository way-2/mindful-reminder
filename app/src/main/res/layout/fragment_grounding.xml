<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GroundingFragment"
    android:id="@+id/fragment_grounding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextSwitcher
            android:id="@+id/grounding_text_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:inAnimation="@anim/nav_default_enter_anim"
            android:outAnimation="@anim/nav_default_exit_anim"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.25"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.25"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                />
        </TextSwitcher>

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:hapticFeedbackEnabled="true"
            android:id="@+id/progress_donut"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:donut_unfinished_stroke_width="12dp"
            app:donut_finished_stroke_width="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="140dp"
            app:donut_circle_starting_degree="270"
            app:donut_clockWise="true"
            app:donut_finished_color="@color/md_theme_dark_onPrimary"
            app:donut_show_text="true"
            app:donut_text="Start"
            app:donut_text_size="25dp"
            app:donut_unfinished_color="@color/md_theme_dark_primaryContainer" />

    </RelativeLayout>

</FrameLayout>